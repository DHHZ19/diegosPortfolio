---
import Button from "./Button.astro";
import data from "../data.json";

const { title = await Astro.slots.render("title") } = Astro.props;
---

<div
  class="mx-auto w-full max-w-7xl lg:px-8 pl-5 border-solid dark:border-slate-100 border-slate-500 border-l-2 border-r-2"
>
  <section class="flex flex-col">
    {
      title && (
        <h2>
          {title && (
            <h2
              class="font-bold text-start text-2xl p-4 px-0"
              set:html={title}
            />
          )}
        </h2>
      )
    }
    {
      data.map((subitems) => (
        <div class="p-4">
          {
            <section class="flex w-full flex-col md:gap-y-0 gap-y-4">
              <div class="w-fit gap-x-4 flex-1">
                <img class="h-32 w-32 rounded-lg" src={subitems.img} alt="" />
                <div class="basis-1/2 max-h-24">
                  <p set:html={subitems.description} />
                </div>
              </div>
              <Button href={subitems.href}>View Proj</Button>
            </section>
          }
        </div>
      ))
    }
  </section>
</div>
