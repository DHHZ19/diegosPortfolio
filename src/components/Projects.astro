---
import data from "../data.json";
import { Image } from "astro:assets";
const { title = await Astro.slots.render("title") } = Astro.props;
---

<div class="mx-auto w-full max-w-7xl lg:px-12 p-5">
  {
    title && (
      <h2>
        {title && (
          <h2 class="font-bold text-start text-2xl p-4 px-0" set:html={title} />
        )}
      </h2>
    )
  }
  <section class="flex flex-col md:flex-row flex-1">
    {
      data.map((subitems) => (
        <div class="p-4 border-b-2 border-solid border-purple-600 md:border-none">
          {
            <section class="flex w-full flex-col md:gap-y-0 gap-y-4 inset-1 leading-8 ">
              <span class="text-lg font-bold py-3">{subitems.title}</span>
              <div class="w-fit gap-x-6 flex-1">
                <Image
                  class="h-32 w-32 rounded-lg"
                  width="128"
                  height="128"
                  src={subitems.img}
                  alt=""
                  loading="eager"
                />
              </div>
              <div class="basis-1/2 max-h-24 py-3 text-base">
                <p set:html={subitems.description} />
              </div>
              <span class="text-sm">
                <a
                  href={subitems.href}
                  class=" text-sm font-medium text-zinc-600 transition group-hover:text-teal-500 dark:text-zinc-200 hover:[text-shadow:0_0_5px_#ffffff]"
                >
                  <svg
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                    class="h-3 w-3 flex-none inline-block"
                  >
                    <path
                      d="M15.712 11.823a.75.75 0 1 0 1.06 1.06l-1.06-1.06Zm-4.95 1.768a.75.75 0 0 0 1.06-1.06l-1.06 1.06Zm-2.475-1.414a.75.75 0 1 0-1.06-1.06l1.06 1.06Zm4.95-1.768a.75.75 0 1 0-1.06 1.06l1.06-1.06Zm3.359.53-.884.884 1.06 1.06.885-.883-1.061-1.06Zm-4.95-2.12 1.414-1.415L12 6.344l-1.415 1.413 1.061 1.061Zm0 3.535a2.5 2.5 0 0 1 0-3.536l-1.06-1.06a4 4 0 0 0 0 5.656l1.06-1.06Zm4.95-4.95a2.5 2.5 0 0 1 0 3.535L17.656 12a4 4 0 0 0 0-5.657l-1.06 1.06Zm1.06-1.06a4 4 0 0 0-5.656 0l1.06 1.06a2.5 2.5 0 0 1 3.536 0l1.06-1.06Zm-7.07 7.07.176.177 1.06-1.06-.176-.177-1.06 1.06Zm-3.183-.353.884-.884-1.06-1.06-.884.883 1.06 1.06Zm4.95 2.121-1.414 1.414 1.06 1.06 1.415-1.413-1.06-1.061Zm0-3.536a2.5 2.5 0 0 1 0 3.536l1.06 1.06a4 4 0 0 0 0-5.656l-1.06 1.06Zm-4.95 4.95a2.5 2.5 0 0 1 0-3.535L6.344 12a4 4 0 0 0 0 5.656l1.06-1.06Zm-1.06 1.06a4 4 0 0 0 5.657 0l-1.061-1.06a2.5 2.5 0 0 1-3.535 0l-1.061 1.06Zm7.07-7.07-.176-.177-1.06 1.06.176.178 1.06-1.061Z"
                      fill="currentColor"
                    />
                  </svg>
                  <span>{subitems.href}</span>
                </a>
              </span>
            </section>
          }
        </div>
      ))
    }
  </section>
</div>
