---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="w-full text-center p-4 pt-1">
  <section class="p-4">
    <h1 class="capitalize text-5xl p-2">
      {SITE_TITLE}
    </h1>
    <p class="text-xl w-1/3 inline-block">
      Software developer, love coding in flow state, outdoors lover
    </p>
  </section>

  <nav>
    <HeaderLink href="/">Me</HeaderLink>
    <HeaderLink href="/skillz">Skillz / CV</HeaderLink>
    <HeaderLink href="https://linkedin.com/in/diegohernandezcode">
      Linkedin
    </HeaderLink>
    <HeaderLink href="https://twitter.com/DiegoCode_" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/DHHZ19" target="_blank">
      GitHub
      <HeaderLink href="/blog">Blog</HeaderLink>
    </HeaderLink>
    <div class="inline-block">
      <img
        width="48"
        height="48"
        class="sun inline-block cursor-pointer"
        src="https://img.icons8.com/emoji/48/sun-emoji.png"
        alt="sun-emoji"
      />
      <img
        class="moon inline-block cursor-pointer"
        width="48"
        height="48"
        src="https://img.icons8.com/plasticine/100/crescent-moon.png"
        alt="crescent-moon"
      />
    </div>
  </nav>
</header>
<style>
  h2 {
    margin: 0.5em 0;
  }
</style>
