---
interface Item {
  title: string;
  description: string;
  img: string;
}

export interface Props {
  title?: string;
  items: Array<Array<Item>>;
}

const { title = await Astro.slots.render("title"), items = [] } = Astro.props;
---

{
  title && (
    <h2>{title && <h2 class="self-center font-bold" set:html={title} />}</h2>
  )
}
{
  items.map((subitems) => (
    <section class="flex flex-wrap gap-y-8 gap-x-2 justify-evenly my-2">
      {subitems.map(({ title, description, img }) => (
        <section class="flex flex-col break-all w-full whitespace-nowrap gap-y-4">
          <div class="w-fit gap-x-4  flex">
            <img class="h-32 w-32 rounded-lg" src={img} alt="" />
            <div class="break-all basis-1/2 max-h-24">
              <h3 class="font-semibold">{title}</h3>
              <p set:html={description} />
            </div>
          </div>
          <button class="w-1/2 rounded-xl bg-white text-black my-1">
            {"click here! "}
            <a href="www.youtube.com" />
          </button>
        </section>
      ))}
    </section>
  ))
}
