---
interface Item {
  title: string;
  description: string;
  img: string;
}

export interface Props {
  title?: string;
  items: Array<Array<Item>>;
}

const { title = await Astro.slots.render("title"), items = [] } = Astro.props;
---

{
  title && (
    <h2>{title && <h2 class="self-center font-bold" set:html={title} />}</h2>
  )
}
{
  items.map((subitems) => (
    <section class="flex flex-wrap gap-y-8 gap-x-10 justify-evenly">
      {subitems.map(({ title, description, img }) => (
        <section class="flex break-all w-1/2 sm:w-2/6">
          <div class="w-fit gap-x-4 gap-y-4 flex">
            <img class="h-32 w-32 rounded-lg" src={img} alt="" />
            <div class="basis-1/2 break-all">
              <h3 class="font-semibold">{title}</h3>
              <p set:html={description} />
            </div>
          </div>
        </section>
      ))}
    </section>
  ))
}
